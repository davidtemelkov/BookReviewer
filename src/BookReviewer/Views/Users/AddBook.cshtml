@model UserAddBookFormModel

@{
    ViewData["Title"] = "Add Book | ";
}

<h2>Add Book</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" placeholder="Enter title">
    </div>
    <div class="form-group">
        <label asp-for="BookGenres"></label>
        <select asp-for="BookGenres" multiple class="form-control">
            @foreach (var genre in Model.Genres)
            {
                <option>@genre</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label asp-for="YearPublished"></label>
        <input asp-for="YearPublished" class="form-control" placeholder="yyyy">
    </div>
    <div class="form-group">
        <label asp-for="Pages"></label>
        <input asp-for="Pages" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="CoverUrl"></label>
        <input asp-for="CoverUrl" class="form-control" placeholder="Photo URL">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

