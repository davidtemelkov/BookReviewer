@model UserProfileViewModel

@using BookReviewer.Infrastructure

<section class="py-5">
    <div class="container px-4 px-lg-5 my-5">
        <div class="row gx-4 gx-lg-5 align-items-center">
            <div class="col-md-6">
                <img class="card-img-top mb-5 mb-md-0" src="@Model.ProfilePictureUrl" alt="..." />
                @if (User.Id() == Model.Id)
                {
                    <div class="text-center">
                        <p class="mt-5">Change profile picture</p>
                    </div>
                }
            </div>
            <div class="col-md-6">
                <h2 class="display-5 fw-bolder">@Model.Username</h2>
                <a asp-controller="Reviews" asp-action="UserReviews" asp-route-id="@Model.Id">Reviews</a>
                <a asp-controller="Lists" asp-action="UserLists" asp-route-id="@Model.Id">Lists</a>
                @if (Model.AuthorId != null)
                {
                    <a asp-controller="Authors" asp-action="Details" asp-route-id="@Model.AuthorId">Author page</a>
                }
            </div>
        </div>
    </div>
</section>