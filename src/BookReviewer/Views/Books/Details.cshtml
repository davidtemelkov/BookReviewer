@model BookDetailsViewModel

@using Microsoft.AspNetCore.Identity

@inject UserManager<User> UserManager
@inject SignInManager<User> SignInManager

<section class="py-5">
    <div class="container px-4 px-lg-5 my-5">
        <div class="row gx-4 gx-lg-5 align-items-center">
            <div class="col-md-6"><img class="mb-5 mb-md-0" src="@Model.CoverUlr" height="500" width="300" /></div>
            <div class="col-md-6">
                <h2 class="display-5 fw-bolder">@Model.Title</h2>
                <div class="fs-5 mb-5">
                    <span class="text-decoration-line-through">By</span>
                    <a asp-controller="Authors" asp-action="Details" asp-route-id="@Model.AuthorId">@Model.AuthorName</a>
                </div>
                <p>Pages: @Model.Pages</p>
                <p>Year published: @Model.YearPublished</p>
                <p>Genres: @Model.Genres</p>
                <p>Rating: @Model.AverageRating</p>
                <p>Description:</p>
                <p>@Model.Description</p>

                @if (SignInManager.IsSignedIn(User))
                {
                    @if (@UserManager.GetUserAsync(User).Result.AuthorId != Model.AuthorId)
                    {
                        <a asp-controller="Reviews" asp-action="Add" asp-route-id="@Model.Id">Give this book a review</a>
                    }
                    else
                    {
                        <a class="btn-block" asp-controller="Users" asp-action="EditBookDetails" asp-route-id="@Model.Id">Edit</a>
                    }
                }

            </div>
        </div>
        <div class="row gx-4 gx-lg-5 mt-4 align-items-center">
            <h5>User reviews</h5>
        </div>

        @if (!Model.Reviews.Any())
        {
            <p>No reviews yet.</p>
        }
        else
        {
            foreach (var review in Model.Reviews.OrderByDescending(x => x.DateAdded))
            {
                <p><a asp-controller="Users" asp-action="Profile" asp-route-id="@review.UserId">@review.User.UserName</a> rated it @review.Stars.ToString() stars</p>
                @if (@review.Text != null)
                {
                    <p>@review.Text</p>
                }
            }
        }

    </div>
</section>