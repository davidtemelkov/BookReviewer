@model AddBookFormModel

<h2>Add Book</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" placeholder="Enter title">
    </div>
    <div class="form-group">
        <label asp-for="Author"></label>
        <input asp-for="Author" class="form-control" placeholder="Enter name">
    </div>
    <div class="form-group">
        <label asp-for="Genres"></label>
        <select asp-for="Genres" multiple class="form-control">
            @foreach ( var genre in Model.Genres)
            {
                <option>@genre.Name</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label asp-for="ReleaseDate"></label>
        <input asp-for="ReleaseDate" class="form-control" placeholder="dd.MM.yyyy">
    </div>
    <div class="form-group">
        <label asp-for="Pages"></label>
        <input asp-for="Pages" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="CoverUrl"></label>
        <input asp-for="CoverUrl" class="form-control" placeholder="Photo URL">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

