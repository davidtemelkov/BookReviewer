@model AddBooksViewModel

<div class="pb-2">
    <h5>List Title:</h5>
    <h4>@Model.Name</h4>
</div>
<div class="pb-4">
    <h5>List Description:</h5>
    <h4>@Model.Description</h4>
</div>
<h4 >Added books:</h4>
<div class="row pt-4">
    @if (Model.AddedBooks.Any())
    {
        @foreach (var book in Model.AvailableBooks)
        {
            <div class="col-md-6 col-lg-2 mb-5">
                <a asp-controller="Books" asp-action="Details" asp-route-id="@book.Id">
                    <div class="card h-100">
                        <img src="@book.CoverUrl" alt="..." />
                        <div class="card-body p-3">
                            <div class="text-center">
                                <h6 class="mb-2">@book.Title</h6>
                                <p class="bottom-0 mt-2">@book.Author</p>
                            </div>
                        </div>
                    </div>
                </a>
                <p class="text-center">
                    <a class="btn btn-success" asp-controller="Lists" asp-action="RemoveFromList" asp-route-id="@book.Id">Add</a>
                </p>
            </div>
        }
    }
    else
    {
        <p>No books added yet.</p>
    }
</div>
<h4 class="pt-4">Available books:</h4>
<div class="row pt-4">
    @foreach (var book in Model.AvailableBooks)
    {
        <div class="col-md-6 col-lg-2 mb-5">
            <a asp-controller="Books" asp-action="Details" asp-route-id="@book.Id">
                <div class="card h-100">
                    <img src="@book.CoverUrl" alt="..." />
                    <div class="card-body p-3">
                        <div class="text-center">
                            <h6 class="mb-2">@book.Title</h6>
                            <p class="bottom-0 mt-2">@book.Author</p>
                        </div>
                    </div>
                </div>
            </a>
            <p class="text-center">
                <a class="btn btn-success" asp-controller="Lists" asp-action="AddToList" asp-route-id="@book.Id">Add</a>
            </p>
        </div>
    }
</div>

